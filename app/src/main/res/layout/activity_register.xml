<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78e08f"
    tools:context=".activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/roundedbackground"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:id="@+id/completeName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="Nome"
                android:minWidth="165dp" />

            <EditText
                android:id="@+id/lastNameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Sobrenome"
                android:minWidth="165dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/userNameEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/completeName"
            android:hint="UsuÃ¡rio"
            android:minWidth="300dp" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userNameEditText"
            android:hint="E-mail"
            android:minWidth="300dp" />

        <LinearLayout
            android:id="@+id/coursesSpinnerGroup"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/emailEditText"
            android:layout_marginStart="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Curso"
                android:textSize="17sp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp" />

            <Spinner
                android:id="@+id/coursesSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/courses"
                android:prompt="@string/courses_prompt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/faculStatus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coursesSpinnerGroup"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="49dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:text="Periodo"
                    android:textSize="17sp" />

                <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:minWidth="100dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_marginLeft="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:text="Ano Que\nIniciou"
                    android:textSize="17sp" />

                <NumberPicker
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:minWidth="100dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_below="@+id/faculStatus"
            android:layout_height="49dp"
            android:layout_marginLeft="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"
                android:text="Data de Nascimento"
                android:textSize="17sp" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:background="#3A3939"
                android:calendarTextColor="#3A3939"
                android:headerBackground="@android:color/transparent"
                android:minWidth="100dp" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>